<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_listUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="qqqq"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_listNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/tv_listUser"
        android:layout_toEndOf="@id/tv_listUser"
        android:gravity="center_vertical"
        android:text="1111"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageBuyOrSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_listNumber"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/tv_listUser"
        android:background="@drawable/bg_ellipse" />

    <TextView
        android:id="@+id/tv_item_important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_rectangular"
        android:gravity="center"
        android:text="Level-1"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>