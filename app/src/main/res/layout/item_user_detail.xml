<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_user_detail_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="36sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_user_detail_task_startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_alignTop="@id/tv_user_detail_task_title"
                android:layout_toEndOf="@id/tv_user_detail_task_title"
                android:layout_marginStart="10dp"/>

            <ImageView
                android:id="@+id/image_user_detail_task_important"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/important"
                android:text="important"
                android:layout_alignBottom="@id/tv_user_detail_task_title"
                android:layout_alignStart="@id/tv_user_detail_task_startDate"/>

            <TextView
                android:id="@+id/tv_user_detail_spinner_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image_user_detail_task_important"
                android:text="s"
                android:textSize="18sp"
                android:layout_alignBottom="@id/tv_user_detail_task_title"/>

            <TextView
                android:id="@+id/tv_user_detail_task_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@id/tv_user_detail_task_title"
                android:layout_alignStart="@id/tv_user_detail_task_title"
                android:ellipsize="end"
                android:maxEms="50"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>