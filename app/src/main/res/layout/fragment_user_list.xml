<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.UserListFragment">

        <androidx.appcompat.widget.SearchView
        android:id="@+id/searchListUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#80DEEA" />

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/rvListUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchListUser"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/darker_gray"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingListUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/add"
        android:layout_alignBottom="@id/rvListUser"
        android:layout_alignEnd="@id/rvListUser"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"/>
</RelativeLayout>